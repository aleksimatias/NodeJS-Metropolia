doctype html
html
    head
        title Movies
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    body
        div.container
            div
                a(href='/addmovie').btn.btn-primary Add movie
                a(href='/addcustomer').btn.btn-primary Add customer
                a(href='/customerlist').btn.btn-primary View customers
            div
                table.table.table-striped
                    tbody
                        thead
                            tr
                                td Title
                                td Director
                                td Year
                        each movie in movies
                            tr
                                td #{movie.title}
                                td #{movie.director}
                                td #{movie.year}
doctype html
html
    head
        title Add customer
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous")
    body
        div.container
            h1 New customer
            form(action='/addcustomer', method='POST')
            div.form-group
                input(type="text", name="firstname" placeholder="First Name").form-control
            div.form-group
                input(type="text", name="lastname" placeholder="Last Name").form-control
            div.form-group
                input(type="text", name="email" placeholder="Email").form-control
            div.form-group
                input(type="text", name="phone" placeholder="Phone Num").form-control
            div
                input(type="submit", value="Add", action='/addcustomer', method='POST').btn.btn-primary